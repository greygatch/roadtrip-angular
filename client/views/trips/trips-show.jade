
.row
  .col-xs-6.col-xs-offset-3
    h3 {{trip.name}}
    #map
.row
  .col-xs-5.col-xs-offset-3
    form(name='tripForm', novalidate)
      .form-group
        label(for='name') Name
        input.form-control#name(type='text', name='name', ng-model='stop.name')
      .form-group
        button.btn.btn-default(type='submit', ng-click='create(stop)') Add Stop
        
        
.row
  .col-xs-6.col-xs-offset-3
    table.table.table-striped
      thead
        tr
          th Location
          th Latitude
          th Longitude
          th Delete
      tbody
        tr(ng-repeat='stop in stops')
          td {{stop.name}}
          td {{stop.lat}}
          td {{stop.lng}}
          td: button.btn.btn-xs.btn-warning(ng-click='destroyStop(stop)') X
